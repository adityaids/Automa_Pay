<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_292sdp"
    android:layout_height="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/_18sdp"
    android:background="@drawable/bills_tag">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        tools:text="Electricity"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/secondary_text"
        android:textAlignment="center"
        tools:text="17/08/1945"/>

    <TextView
        android:id="@+id/tv_bills"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab_bold"
        android:gravity="center"
        android:rotation="-90"
        android:text="@string/bills_no"/>

    <TextView
        android:id="@+id/tv_Bills_no"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_34sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab_bold"
        android:gravity="center"
        android:rotation="-90"
        tools:text="0"/>

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="@dimen/_77sdp"
        android:layout_height="@dimen/_77sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_63sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        tools:background="@drawable/electiricity"/>

    <TextView
        android:id="@+id/tv_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab"
        android:textSize="@dimen/_24ssp"
        android:maxEms="4"
        android:maxLines="1"
        tools:text="&#165; 60k"/>
</androidx.constraintlayout.widget.ConstraintLayout>